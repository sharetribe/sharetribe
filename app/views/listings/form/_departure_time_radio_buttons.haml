= radio_button_tag("valid_until_select", "for_now", !@listing.temporary?, :id => "for_now_radio_button")
= label_tag("for_now_radio_button", t(".repeated"), :class => "radiobutton")
.date_select_container  
  = radio_button_tag("valid_until_select", "date", @listing.temporary?)
  - clear_datetime_select do 
    = datetime_select(:listing, :valid_until, {:start_year => Time.now.year, :end_year => Time.now.year + 1, :default => 3.hours.from_now}, :class => "listing_date_select", :disabled => !@listing.temporary?)