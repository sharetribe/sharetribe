<style type='text/css'>
    <% join = ->(*parts) { File.join(parts.select(&:present?)) } %>

    @font-face {
        /* 'ProximaSoft-Regular' */
        font-family: '<%= family_name %>';
        src: url('<%= join.call(font_path, 'proximasoft-regular-webfont.eot') %>');
        src: url('<%= join.call(font_path, 'proximasoft-regular-webfont.eot?#iefix') %>') format('embedded-opentype'),
        url('<%= join.call(font_path, 'proximasoft-regular-webfont.woff2') %>') format('woff2'),
        url('<%= join.call(font_path, 'proximasoft-regular-webfont.woff') %>') format('woff'),
        url('<%= join.call(font_path, 'proximasoft-regular-webfont.ttf') %>') format('truetype'),
        url('<%= join.call(font_path, 'proximasoft-regular-webfont.svg#proxima_nova_softregular') %>') format('svg');
        font-weight: 400;
        font-style: normal;
    }

