      </svg>
    <% end %>
  </div>
  <div class="title"><%= message[:title] %></div>
  <div class="description <%= message[:reason] %>"><%= message[:description] %></div>
  <% if message[:cta].present? %>
    <div class="cta-wrapper">
      <a class="cta" href="<%= message[:cta_url] %>"><%= message[:cta] %></a>
    </div>
  <% end %>
</body>
