%section.content-card-section.remove-from-mercury
  %h2
    = t('admin2.signup_login.linkedin')
  %p.ingress
    = t('admin2.signup_login.linkedin_info_text',
        href: 'https://www.linkedin.com/developers/',
        href2: 'https://docs.google.com/document/d/1AdGRFAxQkc_g9UP-IUtwAwo5eOAvGGOw2md-LjybR60/#heading=h.hden9iy1mucl').html_safe
  %span.social-block
    - required_link = @current_community.linkedin_connect_enabled?
    .form-group
      = form.label :linkedin_connect_id, t('admin2.signup_login.linkedin_connect_id')
      = form.text_field :linkedin_connect_id, class: %i[form-control social-data] << (:required if required_link), placeholder: '86xb8ms47icxgw'
    .form-group
      = form.label :linkedin_connect_secret, t('admin2.signup_login.linkedin_connect_secret')
      = form.text_field :linkedin_connect_secret, class: %i[form-control social-data] << (:required if required_link), placeholder: 'cVjH9Q2Butjm2J90'
    .form-group
      .form-check
        = form.check_box :linkedin_connect_enabled, class: %i[form-check-input social-checked]
        = form.label :linkedin_connect_enabled, t('admin2.signup_login.linkedin_connect_enabled'), class: %i[form-check-label]
