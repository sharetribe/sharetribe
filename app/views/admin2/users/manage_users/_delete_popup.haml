    = form_tag '#', method: :delete, remote: true, class: %i[modal-content], id: 'form-delete-user' do
      .modal-header
        %h2#userDeleteModalLabel.modal-title
        %button.close{'aria-label' => 'Close', 'data-dismiss' => :modal, type: :button}
          %span{'aria-hidden' => 'true'} Ã—
      .modal-body
