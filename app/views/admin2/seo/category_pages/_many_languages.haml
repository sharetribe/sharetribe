.form-group
  %label
    = t('admin2.category_pages.category_meta_title')
  .multiple-languages-container
    - customizations.each do |customization|
      = form.fields_for :community_customizations, customization do |cc|
        .multiple-languages-language
          %span.language
            = local_name(cc.object.locale)
        .multiple-languages-input
          = cc.text_field :category_meta_title, maxlength: 255, class: %i[form-control], placeholder: t('admin2.category_pages.category_meta_title_placeholder', locale: cc.object.locale),
                                 allowed_template_variables: @seo_service.variables(:category_meta_title).join(','),
                                'data-msg-allowed_template_variables': t('admin2.seo.only_supported_variables')
    %small.form-text
      = t('admin2.category_pages.category_meta_title_info_text')

