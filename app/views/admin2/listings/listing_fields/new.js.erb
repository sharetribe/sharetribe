<% if @custom_field.present? %>
  $('#body_type').html('<%= j render 'admin2/listings/listing_fields/form', custom_field: @custom_field, id: :submit_listing_field %>');
  $('#listingFieldsAddModal .modal-footer .btn-primary').prop('disabled', false);
  sortOptions();
  validateOptions();
<% else %>
  $('#body_type').html('');
  $('#listingFieldsAddModal .modal-footer .btn-primary').prop('disabled', true);
<% end %>
