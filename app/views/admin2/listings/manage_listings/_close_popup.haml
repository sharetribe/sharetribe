    = form_tag close_admin2_listings_manage_listings_path, method: :patch, remote: true, class: %i[modal-content] do
      = hidden_field_tag :id, '', id: :listing_close_id
      .modal-header
        %h5#listingCloseModalLabel.modal-title
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: :button}
          %span{'aria-hidden' => 'true'} Ã—
      .modal-body
        = t('admin2.manage_listings.close_info_text')
