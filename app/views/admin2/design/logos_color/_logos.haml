%section.content-card-section
  %h2
    = t('admin2.logos_and_color.logos')
  .content-card-section-form
    .form-group
      %label
        = t('admin2.logos_and_color.main_logo')
      .custom-file
        %span.choose-filename
          = form.object&.wide_logo&.original_filename || t('admin2.logos_and_color.not_added', name: t('admin2.logos_and_color.main_logo'))
        = form.file_field :wide_logo, accept: 'image/*', class: %i[change-file]
      %small#mainlogo-help.form-text
        = t('admin2.logos_and_color.main_logo_info_text')
    .form-group
      %label
        = t('admin2.logos_and_color.square_logo')
      .custom-file
        %span.choose-filename
          = form.object&.logo&.original_filename || t('admin2.logos_and_color.not_added', name: t('admin2.logos_and_color.square_logo'))
        = form.file_field :logo, accept: 'image/*', class: %i[change-file]

      %small#mobilelogo-help.form-text
        = t('admin2.logos_and_color.square_logo_info_text')
